
<div class="row">
  <div class="col-md-8">
    <h1><%= markdown @topic.name %></h1>
    <p class="lead"><%= markdown @topic.description %></p>
    <%= render @posts %>
    <%= will_paginate @posts %>
  </div>
  <div class="col-md-4">
  <ul class="nav nav-pills nav-stacked">
    <% if policy(@topic).update? %>
      <li ><%= link_to " Edit Topic", edit_topic_path %></li>
    <% end %>
   <% if policy(@topic).destroy? %>
     <li><%= link_to "Delete Topic", @topic, method: :delete, data: { confirm: 'Are you sure you want to delete this topic?' } %> </li>
   <% end %>
   <% if policy(Post.new).create? %>
     <li><%= link_to "New Post", new_topic_post_path(@topic) %></li>
   <% end %>
  </ul>
 </div>
</div>