
<div class="row">
  <div class="col-md-8">
    <h1><%= markdown @topic.name %></h1>
    <p class="lead"><%= markdown @topic.description %></p>
    <% @posts.each do |post| %>
      <div class="media">
        <div class="media-left media-middle">
          <a href="">
          <%= image_tag(post.image.thumb.url, class: 'media-object') if post.image? %>
          </a>
        </div>
        <div class="media-body">
          <h4 class="media-heading">
           <%= link_to (markdown post.title), [@topic, post] %>
         </h4>
          <small>
             <%= image_tag(post.user.avatar.tiny.url, class: 'img-circle') if post.user.avatar? %>
             submitted <%= time_ago_in_words(post.created_at) %> ago by
             <%= post.user.name %><br/>
             <%= post.comments.count %> Comments
           </small>
        </div>
      </div>
    <% end %>
    <%= will_paginate @posts %>
  </div>
  <div class="col-md-4">
  <ul class="nav nav-pills nav-stacked">
    <% if policy(@topic).update? %>
      <li ><%= link_to " Edit Topic", edit_topic_path %></li>
    <% end %>
   <% if policy(Post.new).create? %>
     <li><%= link_to "New Post", new_topic_post_path(@topic) %></li>
   <% end %>
   <% if policy(@topic).destroy? %>
     <li><%= link_to "Delete Topic", @topic, method: :delete, data: { confirm: 'Are you sure you want to delete this topic?' } %> </li>
   <% end %>

  </ul>
 </div>
</div>